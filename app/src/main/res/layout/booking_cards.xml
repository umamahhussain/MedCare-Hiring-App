<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="9dp"
    android:layout_margin="12dp">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/MedicBookingProfileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/boy" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/MedicBookingName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Dr. Sarah Khan"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MedicBookingExperience"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="5+ years experience"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/MedicBookingSpecialization"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Pediatric Physiotherapist"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bookNowBtn"
            android:text="More Info"
            android:textColor="@color/white"
            android:background="@drawable/type1btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>