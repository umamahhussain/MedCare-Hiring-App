<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MedicDetails"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/detailImageforMedicDetails"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/white_image_border"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/boy"
            android:contentDescription="Profile Picture"
            android:elevation="4dp" />

        <!-- Name -->
        <TextView
            android:id="@+id/medicNameforMedicDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0066CC"
            android:fontFamily="@font/audiowide"
            android:layout_marginBottom="12dp"
            android:letterSpacing="0.1" />

        <!-- Each info block -->
        <TextView
            android:id="@+id/detailSpecialtyforMedicDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specialization:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#004d99"
            android:fontFamily="@font/merriweather_light"
            android:padding="12dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#9CD3FF"/>

        <TextView
            android:id="@+id/detailRoleforMedicDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Role:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#004d99"
            android:fontFamily="@font/merriweather_light"
            android:padding="12dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#9CD3FF"/>

        <TextView
            android:id="@+id/detailExperienceforMedicDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experience:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#004d99"
            android:fontFamily="@font/merriweather_light"
            android:padding="12dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#9CD3FF"/>

        <TextView
            android:id="@+id/detailFeesforMedicDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fees:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#004d99"
            android:fontFamily="@font/merriweather_light"
            android:padding="12dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#9CD3FF"/>



        <TextView
            android:id="@+id/detailAvailabilityforMedicDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Availability:"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:textColor="#004d99"
            android:fontFamily="@font/merriweather_light"
            android:padding="12dp" />

        <!-- Book Now Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bookNowButtonforMedicDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:letterSpacing="0.1"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/type1btn"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="52dp"
            android:padding="14dp"
            android:elevation="6dp" />

    </LinearLayout>
</ScrollView>
