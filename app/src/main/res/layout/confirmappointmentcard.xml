<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Name -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">



            <TextView
                android:id="@+id/confirmAppointmentName"
                android:textStyle="bold"
                android:textSize="22sp"
                android:fontFamily="@font/merriweather_light"
                android:text="John Doe"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Location -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/location"
                android:layout_marginEnd="8dp"
                card_view:tint="@color/black" />

            <TextView
                android:id="@+id/confirmAppointmentLocation"

                android:textSize="18sp"
                android:text="Downtown Clinic"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Date and Time -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/time"
                android:layout_marginEnd="8dp"
                card_view:tint="#000000" />

            <TextView
                android:id="@+id/dateTimeText"
                android:textSize="16sp"
                android:text="12 Dec, 3:00 PM"
                android:textColor="#444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Notes -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notes"
                android:layout_marginEnd="8dp"
                card_view:tint="#000000" />

            <TextView
                android:id="@+id/notesText"
                android:textSize="16sp"
                android:text="Bring previous reports"
                android:textColor="#444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_margin="3dp"
            android:gravity="end">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/approveBtn"
                android:text="Approve"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="7dp"
                android:textSize="15dp"
                android:background="@drawable/type1btn"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/denyBtn"
                android:text="Deny"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/type1btn"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
