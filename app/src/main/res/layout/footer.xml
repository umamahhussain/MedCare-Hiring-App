<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="12dp"
   >

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:iiv_icon="faw-home"
        app:iiv_color="#0066CC"
        app:iiv_size="24dp"
        android:contentDescription="Home" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/nav_bookings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:iiv_icon="faw-calendar-alt"
        app:iiv_color="#666666"
        app:iiv_size="24dp"
        android:contentDescription="Bookings" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/nav_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:iiv_icon="faw-comment-dots"
        app:iiv_color="#666666"
        app:iiv_size="24dp"
        android:contentDescription="Chat" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/nav_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:iiv_icon="faw-user"
        app:iiv_color="#666666"
        app:iiv_size="24dp"
        android:contentDescription="Profile" />

</LinearLayout>
