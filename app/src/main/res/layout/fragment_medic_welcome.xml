<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MedicWelcomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_border"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/boy"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:contentDescription="Profile Image"
            android:background="@drawable/round_border"
            android:clipToOutline="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/medicNamewelcomeFrag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, Dr. Ayesha"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/merriweather_light"
                android:textColor="#0066CC" />

            <TextView
                android:id="@+id/medicProfwelcomeFrag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profession: Nurse"
                android:textSize="12sp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="#444" />

            <TextView
                android:id="@+id/medicSpecialwelcomeFrag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialization: Cardiac Care"
                android:textSize="12sp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="#444" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
