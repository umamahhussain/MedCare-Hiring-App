<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MedicWelcomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_border"
        android:padding="8dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/circle_outline"
            android:padding="3dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/boy"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_outline"
                android:contentDescription="Profile Image"
                android:clipToOutline="true"
                android:outlineProvider="background" />
        </FrameLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/medicNamewelcomeFrag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, Dr. Ayesha"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/merriweather_light"
                android:textColor="#0066CC" />

            <TextView
                android:id="@+id/medicProfwelcomeFrag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profession: Nurse"
                android:textSize="12sp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="#444" />

            <TextView
                android:id="@+id/medicSpecialwelcomeFrag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialization: Cardiac Care"
                android:textSize="12sp"
                android:fontFamily="@font/merriweather_light"
                android:textColor="#444" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
