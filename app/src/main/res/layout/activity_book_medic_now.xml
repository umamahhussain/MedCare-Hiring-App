<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookingScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="12dp">

        <!-- Medic Info Header -->
        <ImageView
            android:id="@+id/bookingMedicImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/boy"
            android:background="@drawable/round_border"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/bookingMedicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. John Doe"
            android:textSize="20sp"
            android:textColor="#0066CC"
            android:textStyle="bold"
            android:fontFamily="@font/audiowide"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/bookingMedicRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physiotherapist"
            android:textSize="14sp"
            android:textColor="#555555"
            android:fontFamily="@font/merriweather_light"
            android:layout_marginBottom="16dp" />

        <!-- Date Picker -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textSize="20sp"
            android:textColor="#004d99"
            android:textStyle="bold"
            android:fontFamily="@font/merriweather_light"
            android:layout_marginBottom="8dp"/>

        <CalendarView
            android:id="@+id/bookingCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <!-- Time Picker -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:textSize="16sp"
            android:textColor="#004d99"
            android:textStyle="bold"
            android:fontFamily="@font/merriweather_light"
            android:layout_marginBottom="8dp"/>

        <TimePicker
            android:id="@+id/bookingTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:timePickerMode="spinner" />

        <!-- Location Picker -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Location"
            android:textSize="16sp"
            android:textColor="#004d99"
            android:textStyle="bold"
            android:fontFamily="@font/merriweather_light"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/bookingLocationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter location or use map"
            android:background="@drawable/round_border"
            android:padding="12dp"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/merriweather_light" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pickLocationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick from Map"
            android:textColor="#ffffff"
            android:background='@drawable/type1btn'
            android:padding="10dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/merriweather_light" />


        <!-- Special Notes -->
        <EditText
            android:id="@+id/bookingNotes"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Add any special notes (optional)"
            android:background="@drawable/round_border"
            android:padding="12dp"
            android:textColor="#000"
            android:textSize="14sp"
            android:gravity="top"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/merriweather_light"/>

        <!-- Confirm Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmBookingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.1"
            android:background="@drawable/type1btn"
            android:padding="16dp"
            android:elevation="4dp"/>

    </LinearLayout>
</ScrollView>
