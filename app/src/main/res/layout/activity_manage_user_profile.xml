<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient"
    tools:context=".ManageUserProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/profileImageManageUser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/boy"
            android:scaleType="centerCrop"
            android:background="@drawable/white_image_border"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to change"
            android:padding="6dp"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/userNameEdit"
            android:hint="Full Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/userEmailEdit"
            android:hint="Email"
            android:enabled="false"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/userPhoneEdit"
            android:hint="Phone"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone" />

        <EditText
            android:id="@+id/userAgeEdit"
            android:hint="Age"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <Spinner
            android:id="@+id/genderSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />

        <EditText
            android:id="@+id/userAddressEdit"
            android:hint="Address"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress" />

        <Spinner
            android:id="@+id/bloodGroupSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/userRoleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/saveUserProfileButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/type1btn"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:padding="12dp"
                android:text="Save"
                android:layout_marginTop="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resetUserProfileButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/type1btn"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:padding="12dp"
                android:text="Cancel"
                android:layout_marginTop="20dp" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/type2btn"
            android:text="Sign Out"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
